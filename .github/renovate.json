{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "major": {
    "dependencyDashboardApproval": true
  },
  "packageRules": [
    {
      "matchPackageNames": [
        "go"
      ],
      "groupName": "go"
    },
    {
      "matchPackageNames": [
        "alpine/helm",
        "helm"
      ],
      "groupName": "helm",
      "allowedVersions": "<4.0.0"
    }
  ]
}